class Dog : Animal() { 
    override fun sound() { 
        println("Dog barks") 
    } 
} 
fun main() { 
    val myAnimal: Animal = Dog() 
    myAnimal.sound()  // Calls the Dog's sound method 
 
2d)Encapsulation 
class Person(private var name: String, private var age: Int) { 
    fun getName(): String { 
        return name 
    } 
    fun setName(newName: String) { 
        name = newName 
    } 
    fun getAge(): Int { 
        return age 
    } 
    fun setAge(newAge: Int) { 
        if (newAge > 0) { 
            age = newAge 
        } } } 
fun main() { 
    val person = Person("John", 25) 
    println(person.getName()) // John 
    person.setName("Alice") 
    println(person.getName()) // Alice 
} 
}
