2a) Class & Object creation 
class Car(val make: String, val model: String, var year: Int) { 
fun startEngine() { 
println("The engine of $make $model is started.") 
} 
} 
fun main() { 
val myCar = Car("Toyota", "Corolla", 2021) 
myCar.startEngine()   
} 
2b)inheritance 
open class Vehicle(val make: String, val model: String) { 
open fun displayInfo() { 
println("Vehicle Make: $make, Model: $model") 
} 
} 
class Car(make: String, model: String, val year: Int) : Vehicle(make, model) { 
override fun displayInfo() { 
println("Car Make: $make, Model: $model, Year: $year") 
} 
} 
fun main() { 
val myCar = Car("Toyota", "Corolla", 2021) 
myCar.displayInfo()  // Calling overridden method 
} 
